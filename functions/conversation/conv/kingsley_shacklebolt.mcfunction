execute as @s[tag=use] as @e[type=armor_stand,limit=1,scores={con=2}] run data merge entity @s {CustomName:"{\"text\":\"≤ What do you think of Наземникус Флетчер? \"}",Tags:["_____Normal_____","_____click_____","convOption","i"]}
